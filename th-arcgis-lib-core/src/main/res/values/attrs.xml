<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--搜索周边半径-->
    <string-array name="search_around_radius">
        <item>500米</item>
        <item>1000米</item>
        <item>2000米</item>
    </string-array>

    <declare-styleable name="CalloutView">
        <!--callout 背景色-->
        <attr name="calloutBackgroundColor" format="color"/>
        <!--标题及内容颜色大小style-->
        <attr name="calloutTextPrimaryStyle" format="reference"/>
        <!--缓冲区buffer相关颜色大小style-->
        <attr name="calloutTextSubPrimaryStyle" format="reference"/>
        <!--分割线颜色-->
        <attr name="calloutDividerColor" format="color"/>
        <!--缓冲区列表及spinner背景-->
        <attr name="calloutRecyclerViewBackground" format="reference"/>
        <!--按钮背景-->
        <attr name="calloutButtonBackground" format="reference"/>
        <!--按钮字体颜色大小style-->
        <attr name="calloutButtonTextStyle" format="reference"/>
        <!--关闭图标-->
        <attr name="calloutIconClose" format="reference"/>
        <!--搜索图标-->
        <attr name="calloutIconSearch" format="reference"/>
        <!--详情图标-->
        <attr name="calloutIconDetail" format="reference"/>
    </declare-styleable>
</resources>