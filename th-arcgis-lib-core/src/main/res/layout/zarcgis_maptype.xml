<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_maptype"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_satellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="67dp"
            android:scaleType="fitXY"
            android:src="@drawable/zarcgis_maptype_img"/>

        <TextView
            android:id="@+id/tv_satellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="影像图"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="67dp"
            android:scaleType="fitXY"
            android:src="@drawable/zarcgis_maptype_vec"/>

        <TextView
            android:id="@+id/tv_vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="平面图"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>