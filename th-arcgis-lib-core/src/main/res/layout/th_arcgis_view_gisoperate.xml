<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.telchina.tharcgiscore.GisMapView
        android:id="@+id/gis_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
    </com.telchina.tharcgiscore.GisMapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_maptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_maptype_vec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="地图"
                android:textColor="@color/gismap_btn_group_textcolor_selector"/>

            <TextView
                android:id="@+id/tv_maptype_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="影像"
                android:textColor="@color/gismap_btn_group_textcolor_selector"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imb_layear_remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_maptype"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_gismap_remove"/>

        <ImageView
            android:id="@+id/btn_reset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imb_layear_remove"
            android:background="@drawable/icon_gismap_reset"
            />

        <ImageButton
            android:id="@+id/imb_map_zoomout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_reset"
            android:background="@drawable/icon_gismap_zoomout"
            />

        <ImageButton
            android:id="@+id/imb_map_zoomin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imb_map_zoomout"
            android:background="@drawable/icon_gismap_zoomin"
            />

        <ImageButton
            android:id="@+id/btn_get_lcoation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/icon_gismap_location"
            android:checked="false"
            android:textOff=""
            android:textOn=""
            />

        <ProgressBar
            android:id="@+id/progressbar_gps"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/btn_get_lcoation"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>
